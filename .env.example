# Telegram Streamer Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Telegram API Credentials
# Get from: https://my.telegram.org/apps
# ===========================================
TG_API_ID=your_api_id_here
TG_API_HASH=your_api_hash_here

# ===========================================
# AUTHENTICATION MODE (choose one)
# ===========================================

# Option 1: Bot Mode (Recommended for testing)
# Note: Bots cannot join video chats by themselves.
# They need to be added by an admin with appropriate permissions.
# TG_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Option 2: Userbot Mode (Recommended for production)
# Use your phone number (with country code)
# TG_PHONE_NUMBER=+1234567890

# ===========================================
# Session Configuration
# ===========================================
TG_SESSION_NAME=telegram_streamer
TG_SESSION_PATH=/app/sessions

# ===========================================
# Streaming Defaults
# ===========================================
# Default transcode profile: auto, 480p, 720p, 1080p
TG_DEFAULT_PROFILE=auto

# ===========================================
# FFmpeg Configuration
# ===========================================
TG_FFMPEG_PATH=ffmpeg
TG_FFMPEG_THREADS=2
TG_FFMPEG_TIMEOUT=30

# ===========================================
# Reconnection Settings
# ===========================================
TG_RECONNECT_ENABLED=true
TG_RECONNECT_MIN_DELAY=5
TG_RECONNECT_MAX_DELAY=30
TG_RECONNECT_MAX_ATTEMPTS=10
TG_RECONNECT_TIMEOUT=90

# ===========================================
# API Server
# ===========================================
TG_API_HOST=0.0.0.0
TG_API_PORT=8080
TG_API_WORKERS=1

# ===========================================
# Logging
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR
TG_LOG_LEVEL=INFO
# Use JSON format for logs (recommended for production)
TG_LOG_JSON=false

# ===========================================
# Health Check
# ===========================================
TG_HEALTH_CHECK_INTERVAL=30

# ===========================================
# Docker Compose Overrides
# ===========================================
# External API port
API_PORT=8080

# Grafana admin password (for monitoring profile)
GRAFANA_PASSWORD=admin
